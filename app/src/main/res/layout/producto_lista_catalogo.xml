<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <!--BOTONES_______________________________________________________________-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--IMAGEN__________________________________________________________-->
            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/no_imagen"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:background="@drawable/agregar_prod"
                    android:layout_marginHorizontal="6dp"
                    android:id="@+id/btnAgregar"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleY="0.7"
                    android:scaleX="0.7"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modificar_prod"
                    android:layout_marginHorizontal="6dp"
                    android:id="@+id/btnModificar"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleY="0.6"
                    android:scaleX="0.6"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eliminar_prod"
                    android:layout_marginHorizontal="6dp"
                    android:id="@+id/btnEliminar"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleY="0.6"
                    android:scaleX="0.6"
                    />

            </LinearLayout>

        </LinearLayout>

        <!--DESC_________________________________________________________________-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/btnDetalle"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >

            <!--BLOQUE___________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="ID Neumatico: "
                    android:textColorHint="#F4F4F4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="marca..."
                    android:id="@+id/tvLlantaId"
                    android:textColorHint="#F4F4F4"/>
            </LinearLayout>

            <!--BLOQUE___________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColorHint="#F4F4F4"
                    android:text="Marca: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="marca..."
                    android:textColorHint="#F4F4F4"
                    android:id="@+id/tvMarca"/>
            </LinearLayout>

            <!--BLOQUE____________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--ANCHO______________________________-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColorHint="#F4F4F4"
                        android:text="A: "/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="..."
                        android:textColorHint="#F4F4F4"
                        android:id="@+id/tvAncho"/>
                </LinearLayout>


                <!--DIAMETRO-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="D: "
                        android:textColorHint="#F4F4F4"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="..."
                        android:textColorHint="#F4F4F4"
                        android:id="@+id/tvDiametro"/>
                </LinearLayout>


                <!--PERFL_____________________-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="P: "
                        android:textColorHint="#F4F4F4"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="..."
                        android:textColorHint="#F4F4F4"
                        android:id="@+id/tvPerfil"/>
                </LinearLayout>

            </LinearLayout>


            <!--BLOQUE____________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Mm de Cocada: "
                    android:textColorHint="#F4F4F4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="mmCocada..."
                    android:textColorHint="#F4F4F4"
                    android:id="@+id/tvMmCocada"/>
            </LinearLayout>

            <!--BLOQUE____________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Precio: "
                    android:textColorHint="#F4F4F4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="precio..."
                    android:textColorHint="#F4F4F4"
                    android:id="@+id/tvPrecio"/>
            </LinearLayout>

            <!--BLOQUE____________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Stock: "
                    android:textColorHint="#F4F4F4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="stock..."
                    android:textColorHint="#F4F4F4"
                    android:id="@+id/tvStock"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>