<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carretera_campo"
    tools:context=".fragments_registros.detalle_llanta">
    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <!--TITULO_______________________________________-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Registrar Detalle Neumatico"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginVertical="20dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#F4F4F4"
                    />
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Marca del Neumatico: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnNombreMarca"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Indice de Carga: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnIndiceCarga"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Indice de Velocidad: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnIndiceVelocidad"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Imagen del Neumatico:"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="10dp"
                android:textColor="#F4F4F4"
                android:textSize="15dp"
                />

            <ImageView
                android:id="@+id/ivFoto_Llanta"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/no_imagen"
                />

            <Button
                android:id="@+id/btnFoto_Llanta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:typeface="sans"
                android:text="Seleccionar imagen"
                android:background="@drawable/bordesredondos"
                android:textSize="15dp"
                android:textColor="#F4F4F4"/>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Construccion: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnConstruccion"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Presion Maxima: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnPresionMaxima"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Clasificacion: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spnClasificacion"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>

            <!--BLOQUE______________________________________________________________________-->
            <EditText
                android:id="@+id/EtFechaFabricacion"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Insertar fecha de fabricacion:"
                android:textColorHint="#F4F4F4"
                android:justificationMode="inter_word"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"
                android:textColor="#F4F4F4"/>

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar un ID de Medida:"
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/Spi_MedidaLlanta"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>


            <TextView
                android:id="@+id/Tv_cargar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Datos de medida..."
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:textColorHint="#F4F4F4"
                android:textSize="15dp"
                android:textColor="#F4F4F4"
                android:paddingHorizontal="15dp"
                />

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bordesredondos"
                    android:text="Registrar"
                    android:textColor="#F4F4F4"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesredondos"
                    android:layout_marginHorizontal="15dp"
                    android:text="Cancelar"
                    android:textColor="#F4F4F4"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>