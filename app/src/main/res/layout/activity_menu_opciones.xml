<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final3"
    tools:context=".menu_opciones"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:layout_margin="5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@drawable/imafin"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:layout_margin="10dp"
                    android:id="@+id/btnProductos"
                    />

                <Button
                    android:id="@+id/btnCatalogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/logon2"
                    android:scaleX="0.6"
                    android:scaleY="0.7" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:layout_margin="5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@drawable/logon1"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_margin="10dp"
                    android:id="@+id/btnRegistroCliente"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@drawable/en_proceso"
                    android:scaleX="0.5"
                    android:scaleY="0.7"
                    android:layout_margin="10dp"
                    android:id="@+id/btnSalida_Producto"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:layout_margin="5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@drawable/en_proceso"
                    android:scaleX="0.5"
                    android:scaleY="0.7"
                    android:layout_margin="10dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@drawable/en_proceso"
                    android:scaleX="0.5"
                    android:scaleY="0.7"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>