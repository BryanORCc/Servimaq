<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carretera_campo"
    tools:context=".fragments_registros.fragment_neumatico"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">


            <!--TITULO_______________________________________-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Registrar Neumatico"
                    android:textSize="25dp"
                    android:textColor="#F4F4F4"
                    android:layout_marginVertical="20dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    />
            </LinearLayout>

            <!--precio-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Precio:"
                android:textColor="#F4F4F4"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Precio..."
                android:textColorHint="#F4F4F4"
                android:inputType="number|numberDecimal"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"/>
            <!--_____________________________________-->

            <!--stock-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Stock:"
                android:textColor="#F4F4F4"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Stock..."
                android:textColorHint="#F4F4F4"
                android:inputType="number"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"/>
            <!--_____________________________________-->

            <!--especificacion-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Detalle de Neumatico:"
                android:textColor="#F4F4F4"
                android:textSize="15dp" />


            <!--tipo de vehiculo-->
            <Spinner
                android:id="@+id/Spi_especificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:rotationX="-12"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:hint="detalle "
                android:textColor="#F4F4F4"
                android:textSize="15dp"
                android:id="@+id/Tv_ver"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/ivFoto_neumatico"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="Tipo de Vehiculo:"
                android:textColor="#F4F4F4"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/Spi_vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:rotationX="-12"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:hint="tipo vehiculo"
                android:textColor="#F4F4F4"
                android:textSize="15dp"
                android:id="@+id/Tv_ver1"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:id="@+id/ivFoto_vehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen" />
            </LinearLayout>


            <!--_______botones de registrar  y cancelar _____________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bordesredondos"

                    android:text="Registrar" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bordesredondos"
                    android:text="Cancelar" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>