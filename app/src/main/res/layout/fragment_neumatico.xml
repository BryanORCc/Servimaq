<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carretera_campo"
    tools:context=".fragments_registros.fragment_neumatico"
    >

    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">


            <!--TITULO_______________________________________-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Registrar Neumatico"
                    android:textSize="25dp"
                    android:textColor="#F4F4F4"
                    android:layout_marginVertical="20dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    />
            </LinearLayout>

            <!--precio-->
            <EditText
                android:id="@+id/etprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Precio..."
                android:textColorHint="#F4F4F4"
                android:inputType="number|numberDecimal"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"
                android:textColor="#F4F4F4"/>
            <!--_____________________________________-->

            <!--stock-->
            <EditText
                android:id="@+id/etstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Stock..."
                android:textColorHint="#F4F4F4"
                android:inputType="number"
                android:textSize="15dp"
                android:paddingHorizontal="15dp"
                android:textColor="#F4F4F4"/>
            <!--_____________________________________-->

            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar un ID de Detalle: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/Spi_especificacion"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detalle neumatico: "
                android:textColorHint="#F4F4F4"
                android:textColor="#F4F4F4"
                android:textSize="15dp"
                android:id="@+id/Tv_ver"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/ivFoto_neumatico"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen"
                    />

            </LinearLayout>


            <!--BLOQUE______________________________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar un ID de Vehiculo: "
                    android:textSize="15dp"
                    android:textColor="#F4F4F4"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/Spi_vehiculo"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="25dp"
                    android:baselineAligned="false"
                    android:textSize="15dp"
                    android:spinnerMode="dropdown"
                    android:scrollbarStyle="insideOverlay"
                    android:backgroundTint="#0C0C0C"
                    android:backgroundTintMode="add"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tipo vehiculo"
                android:textColorHint="#F4F4F4"
                android:textColor="#F4F4F4"
                android:textSize="15dp"
                android:id="@+id/Tv_ver1"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:id="@+id/ivFoto_vehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen" />
            </LinearLayout>


            <!--_______botones de registrar  y cancelar _____________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bordesredondos"
                    android:text="Registrar"
                    android:textColor="#F4F4F4"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bordesredondos"
                    android:text="Cancelar"
                    android:textColor="#F4F4F4"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>