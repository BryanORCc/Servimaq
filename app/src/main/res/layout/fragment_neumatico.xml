<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragment_neumatico"
    android:background="#F1EEEE">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:fontFamily="sans-serif-black"
                android:text="Registrar Neumatico"
                android:textAlignment="center"
                android:textSize="41dp" />

            <!--precio-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Precio:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="Precio..."
                android:inputType="number|numberDecimal"
                android:textSize="15dp" />
            <!--_____________________________________-->

            <!--stock-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Stock:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="Stock..."
                android:inputType="number"
                android:textSize="15dp" />
            <!--_____________________________________-->

            <!--especificacion-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Detalle de Neumatico:"
                android:textSize="15dp" />


            <!--tipo de vehiculo-->


            <Spinner
                android:id="@+id/Spi_especificacion"
                android:layout_width="370dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:baselineAligned="false"
                android:rotationX="-17"
                android:textSize="30dp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/Tv_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-black"
                android:hint="Detalle Llantas"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivFoto_neumatico"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/no_imagen" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="Tipo de Vehiculo:"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/Spi_vehiculo"
                android:layout_width="372dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:baselineAligned="false"
                android:rotationX="-12"
                android:textSize="30dp"
                android:visibility="visible"
                tools:visibility="visible" />
            <TextView
                android:id="@+id/Tv_ver1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-black"
                android:hint="Tipo de Vehiculo"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivFoto_vehiculo"
                    android:layout_width="106dp"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen" />


            </LinearLayout>




            <!--_______botones de registrar  y cancelar _____________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Registrar"

                    />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Cancelar" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>