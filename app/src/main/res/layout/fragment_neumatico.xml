<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments_registros.fragment_neumatico"
    android:background="#F1EEEE">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <!--TITULO_______________________________________-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAtras"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/menu_atras"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.85"
                    android:layout_height="wrap_content"
                    android:text="Registrar Neumatico"
                    android:textSize="33dp"
                    android:layout_marginVertical="25dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    />
            </LinearLayout>

            <!--precio-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Precio:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="Precio..."
                android:inputType="number|numberDecimal"
                android:textSize="15dp" />
            <!--_____________________________________-->

            <!--stock-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Stock:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="Stock..."
                android:inputType="number"
                android:textSize="15dp" />
            <!--_____________________________________-->

            <!--especificacion-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Detalle de Neumatico:"
                android:textSize="15dp" />


            <!--tipo de vehiculo-->
            <Spinner
                android:id="@+id/Spi_especificacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:baselineAligned="false"
                android:rotationX="-12"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Tv_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Detalle del neumatico..."
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:id="@+id/ivFoto_neumatico"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen"
                    android:layout_marginVertical="10dp"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="Tipo de Vehiculo:"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/Spi_vehiculo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:baselineAligned="false"
                android:rotationX="-12"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/Tv_ver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tipo de vehiculo"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:id="@+id/ivFoto_vehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_imagen"
                    android:layout_marginVertical="10dp" />
            </LinearLayout>




            <!--_______botones de registrar  y cancelar _____________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Registrar"

                    />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Cancelar" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>