<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo45"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="15dp"
        android:hint="Iniciar\nSesion"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="45dp"
        android:textStyle="italic"
        android:paddingVertical="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:gravity="start">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:background="#9A0E0E0E"
            android:hint="usuario..."
            android:padding="10dp"
            android:id="@+id/etUsuario"
            android:text="admin"
            android:textColor="#9AFFFFFF"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="#9A0E0E0E"
            android:hint="contraseÃ±a..."
            android:inputType="textPassword"
            android:id="@+id/etContra"
            android:text="admin"
            android:textColor="#9AFFFFFF"
            android:textSize="20sp"
            >
        </EditText>

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bordesredondos"
            android:textColor="#251111"
            android:textColorHint="#FFFFFF"
            android:text="Ingresar"
            android:textSize="20sp"></Button>

    </LinearLayout>



</LinearLayout>