<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragment_vehiculo"
    android:background="#F1EEEE">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            >
            <!--TITULO_______________________________________-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAtras"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/menu_atras"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.85"
                    android:layout_height="wrap_content"
                    android:text="Registrar Vehiculo"
                    android:textSize="35dp"
                    android:layout_marginVertical="25dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    />
            </LinearLayout>

            <!--BLOQUE_____________________________________-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de vehiculo:"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="vehiculo..."
                android:textSize="15dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/etTipoVehiculo"
                />

            <!--BLOQUE_____________________________________-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen Vehiculo:"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/no_imagen"
                android:layout_marginVertical="10dp"
                android:id="@+id/ivFoto"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar imagen"
                android:textSize="15dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/btnFoto"
                />

            <!--BLOQUE_____________________________________-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca de vehiculo:"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="vehiculo..."
                android:textSize="15dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/etMarcaVehiculo"
                />

            <!--BLOQUE_____________________________________-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo de vehiculo:"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="vehiculo..."
                android:textSize="15dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/etModeloVehiculo"
                />

            <!--BLOQUE_____________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Registrar"
                    android:id="@+id/btnRegistrar"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Cancelar"
                    android:id="@+id/btnCancelar"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>