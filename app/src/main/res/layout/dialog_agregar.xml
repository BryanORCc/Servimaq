<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#63E3E3"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Agregar producto a listado\n de salida"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            />

        <!--BLOQUE DIVISION_________________________________-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="1dp"
                android:background="#1B1919"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:text="Seleccionar pedido"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="1dp"
                android:background="#1B1919"
                />
        </LinearLayout>


        <Spinner
            android:id="@+id/spncodPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Nombres: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvNombresCliente"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Apellidos: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvApellidosCliente"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Correo: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Fecha de Pedido: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvFechaActual"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Fecha de Entrega: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvFechaEntrega"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="Modo de Pago: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvModoPago"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUEEEE______________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:text="DNI: "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>

            <!--VISTA TEXTO:::::::::::::::::::::::::::::-->
            <TextView
                android:id="@+id/tvDNI"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="...................."
                android:textSize="12dp" />

        </LinearLayout><!--FIN______________________________________________________________-->

        <!--BLOQUE DIVISION_________________________________-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#1B1919"
            />

        <!--BLOQUEEE_________________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnDgAgregar"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/fondoboton2"
               android:textColor="#DDD7D7" />

            <Button
                android:id="@+id/btnDgCancelar"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/fondoboton2"
                android:textColor="#DDD7D7"/>
        </LinearLayout><!--FIN______________________________________________________________-->


    </LinearLayout>

</FrameLayout>