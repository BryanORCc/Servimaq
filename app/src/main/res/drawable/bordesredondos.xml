<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#DDCFA4" />
            <gradient
                android:startColor="#DAF80000"
                android:centerColor="#D2F80000"
                android:endColor="#D7F80000"
                android:type="linear"
                android:angle="270"
                />
            <padding android:left="15dp"
                android:right="15dp"/>
        </shape>
    </item>
</selector>